<%= @comments.each do |c| %>
  <div class="comment" id="comment-<%= comment.id %>">
    <h6><%= c.user.username %> said:</h6>
    <p>
      <%= @comment.body %>
    </p>
    <p>
      <%= @comment.updated_at %>
    </p>
    <% if @comment.user = current_user %>
      <%= link_to "delete comment", comment_path(@comment), method: :delete, remote: true, confirm: "Are you sure you want to remove this comment?", class: 'close' %>
    <% end %>
  </div>
<% end %>
